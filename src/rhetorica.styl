@charset "utf-8"

html
  font-size: 20px

body
  font-family: Georgia, serif
  background-color: #fff
  color: #000

.sans-serif
  font-family: Helvetica, sans-serif

*:lang(ja)
  font-family: "Hiragino Mincho ProN", serif

h1,
h2,
h3
  font-weight: 700
  margin: 1rem 0
  line-height: 1

h1
  font-size: 130%

h2
  font-size: 110%

h3
  font-size: 100%

article
  max-width: 700px
  margin: 0 auto
  margin-top: 100px
  margin-bottom: 400px
  counter-reset: sidenote-counter

a
  text-decoration: none
  border-bottom: 1px dotted #000
  color: inherit

p,
ol,
ul,
blockquote
  line-height: 1.75

p
  margin-top: 1.4rem
  margin-bottom: 1.4rem
  padding-right: 0
  vertical-align: baseline

ol,
ul
  margin-bottom: 2rem

li:not(:first-child)
  margin-top: 0.25rem

.sidenote
  float: right
  clear: right
  margin-right: -50%
  width: 300px
  margin-top: 0
  margin-bottom: 0
  font-size: 0.75rem
  line-height: 1.3
  vertical-align: baseline
  position: relative

.sidenote-number
  counter-increment: sidenote-counter

.sidenote-number::after,
.sidenote:before
  position: relative
  vertical-align: baseline

.sidenote-number::after
  content: counter(sidenote-counter)
  vertical-align: super
  font-size: 0.75rem
  left: 0.1rem

.sidenote::before
  content: counter(sidenote-counter) " "
  vertical-align: super
  font-size: 0.75rem

label.sidenote-number
  display: inline

// blockquote
blockquote
  padding: 0
  margin-right: 0

blockquote footer
  text-align: right

blockquote .sidenote
  text-align: left
  margin-right: -53.23%

// @media
@media (max-width: 760px)
  .sidenote, blockquote .sidenote
    box-sizing: border-box
    display: block
    float: left
    left: 2.5%
    clear: both
    width: 95%
    margin: 1rem 2.5%
    position: relative

  blockquote p, blockquote footer
    width: 100%

@media (min-width: 60em)
  article
    margin-left: 120px
